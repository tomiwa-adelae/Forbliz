generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  phone     String
  subject   String // Matches your form: tenders, logistics, general, rental
  message   String   @db.Text
  isRead    Boolean  @default(false) // Added: Useful for your Admin Dashboard
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Added: Good practice for tracking

  @@map("contacts") // Optional: Maps the table name to lowercase in Postgres
}

model QuoteRequest {
  id              String   @id @default(uuid())
  fullName        String
  email           String
  companyName     String
  phone           String
  serviceCategory String
  location        String
  tonnage         String?
  startDate       String
  requirements    String   @db.Text
  status          String   @default("pending") // pending, reviewing, quoted
  createdAt       DateTime @default(now())

  @@map("quote_requests")
}
